{% extends 'base.html.twig' %}

{% block title %}Modifier la réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>
            Modifier la réservation
            <span class="badge {{ reservation.status == 'confirmed' ? 'bg-success' : (reservation.status == 'pending' ? 'bg-warning text-dark' : 'bg-secondary') }}">
                {{ reservation.status == 'confirmed' ? 'Confirmée' : (reservation.status == 'pending' ? 'Pré-réservation' : reservation.status) }}
            </span>
        </h1>

        {{ include('reservation/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

        {{ include('reservation/_delete_form.html.twig') }}
    </div>
{% endblock %}